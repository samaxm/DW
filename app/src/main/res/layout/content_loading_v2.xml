<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_loading_v2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.sx.dw.accountAndSecurity.ui.LoadingActivity"
    tools:showIn="@layout/activity_loading_v2">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <android.support.design.widget.TextInputLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <EditText
                android:id="@+id/et_input_sign"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="输入你的标签，或者选择推荐的标签" />
        </android.support.design.widget.TextInputLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            android:onClick="inputOk"
            android:padding="8dp"
            android:text="OK"
            android:textColor="#ffffff"
            android:textSize="18dp" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="推荐标签：" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onSignSelect"
            android:padding="16dp"
            android:text="高富帅"
            android:textColor="#4990e2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onSignSelect"
            android:padding="16dp"
            android:text="超级吃吃吃货"
            android:textColor="#4990e2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onSignSelect"
            android:padding="16dp"
            android:text="御姐"
            android:textColor="#4990e2" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onSignSelect"
            android:padding="16dp"
            android:text="穷困潦倒的卖唱家"
            android:textColor="#4990e2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onSignSelect"
            android:padding="16dp"
            android:text="算命的"
            android:textColor="#4990e2" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onSignSelect"
            android:padding="16dp"
            android:text="抠脚女汉子"
            android:textColor="#4990e2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onSignSelect"
            android:padding="16dp"
            android:text="为了部落！"
            android:textColor="#4990e2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onSignSelect"
            android:padding="16dp"
            android:text="为了联盟！"
            android:textColor="#4990e2" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onSignSelect"
            android:padding="16dp"
            android:text="怪蜀黍"
            android:textColor="#4990e2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onSignSelect"
            android:padding="16dp"
            android:text="追求真爱的壕"
            android:textColor="#4990e2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onSignSelect"
            android:padding="16dp"
            android:text="老实人"
            android:textColor="#4990e2" />
    </LinearLayout>
</LinearLayout>

